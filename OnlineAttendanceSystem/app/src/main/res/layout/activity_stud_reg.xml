<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    tools:context=".Stud_Reg_Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="Student Registration"
        android:gravity="center"
        android:textSize="30sp"
        android:fontFamily="@font/quicksand_medium"
        android:textColor="@color/Primary"/>

    <EditText
        android:id="@+id/studId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/quicksand_medium"
        android:hint="@string/id"
        android:inputType="number"
        android:maxLength="9"
        android:textColor="@color/Font"
        android:textColorHint="@color/Font"
        android:textCursorDrawable="@color/Primary"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/studFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/quicksand_medium"
        android:hint="@string/fName"
        android:textColor="@color/Font"
        android:textColorHint="@color/Font"
        android:textCursorDrawable="@color/Primary"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/studLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/quicksand_medium"
        android:hint="@string/lName"
        android:textColor="@color/Font"
        android:textColorHint="@color/Font"
        android:textCursorDrawable="@color/Primary"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/studEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/quicksand_medium"
        android:hint="Email ID"
        android:inputType="textEmailAddress"
        android:textColor="@color/Font"
        android:textColorHint="@color/Font"
        android:textCursorDrawable="@color/Primary"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/studPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/quicksand_medium"
        android:layout_marginTop="10dp"
        android:hint="@string/phone"
        android:inputType="phone"
        android:textColor="@color/Font"
        android:textColorHint="@color/Font"
        android:textCursorDrawable="@color/Primary"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/sPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Upload Your Photo (.jpg or .png)"
        android:textSize="17sp"
        android:fontFamily="@font/quicksand_medium"
        android:textColor="@color/Primary"/>

    <Button
        android:id="@+id/studPhoto"
        android:layout_width="225dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="25dp"
        android:text="Choose File"
        android:textStyle="bold"
        android:fontFamily="@font/quicksand_medium"
        android:textColor="@android:color/black"
        android:background="@color/Primary"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/studRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="25dp"
        android:text="Register"
        android:textStyle="bold"
        android:fontFamily="@font/quicksand_medium"
        android:textColor="@android:color/black"
        android:background="@color/Primary"
        android:textSize="20sp"/>

</LinearLayout>